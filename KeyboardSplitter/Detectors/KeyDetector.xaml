<Window x:Class="KeyboardSplitter.Detectors.KeyDetector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Waiting for keyboard input" Height="128" Width="324" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" ResizeMode="NoResize"
        Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0" />
                <GradientStop Color="#FFFFD8BF" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Name="functionTextBlock" Text="Function" HorizontalAlignment="Center" Margin="0,0,0,60" Width="278"
                   TextAlignment="Center" Background="Transparent"/>
        <Separator Height="2" Margin="0,-20,0,0"/>
        <Label Margin="0,35,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">Press the key to which you wish to assign this function</Label>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" />
    </Grid>
</Window>
