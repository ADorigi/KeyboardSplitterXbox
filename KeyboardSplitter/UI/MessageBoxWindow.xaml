<ui:CustomWindow x:Class="KeyboardSplitter.UI.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:KeyboardSplitter.UI"
        Title="MessageBox" MinHeight="150" MinWidth="400" Width="400"
                 SizeToContent="Height"
                 IsToolWindow="True">
    <ui:CustomWindow.Resources>
        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="Width" Value="70" />
            <Setter Property="Height" Value="23" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </ui:CustomWindow.Resources>
    <Grid>
        <TextBlock Name="text" MinWidth="100" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,20,0,50" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,10,10">
            <Button Content="Yes" Style="{StaticResource buttonStyle}" Name="buttonYes" Click="buttonYes_Click" />
            <Button Content="No" Style="{StaticResource buttonStyle}" Name="buttonNo" Click="buttonNo_Click" />
            <Button Content="Cancel" Style="{StaticResource buttonStyle}" Name="buttonCancel" Click="buttonCancel_Click" />
            <Button Content="OK" Style="{StaticResource buttonStyle}" Name="buttonOK" Click="buttonOK_Click"/>
        </StackPanel>
    </Grid>
</ui:CustomWindow>
