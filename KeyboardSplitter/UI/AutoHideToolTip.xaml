<Window x:Class="KeyboardSplitter.UI.AutoHideTooltip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:ClassModifier="internal"
        Title="AutoHideTooltip" Height="124" Width="300" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Activated="Window_Activated" UseLayoutRounding="True" Topmost="True">
    <Grid>
        <TextBox Name="textBlock" HorizontalAlignment="Stretch" Foreground="Black" AcceptsReturn="True" Width="Auto" IsEnabled="False"/>
        <Button Content="x" Height="15" HorizontalAlignment="Right" BorderBrush="Red" BorderThickness="1" Foreground="Red" Name="closeButton"
                VerticalAlignment="Top" Width="15" Click="CloseButton_Click" Padding="1,-3,0,0"/>
    </Grid>
</Window>
